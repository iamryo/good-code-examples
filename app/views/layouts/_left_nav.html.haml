#left_nav.vertical_padding_base.bottom_padding_base
  .brand_icon.line_height_buffer_base
    = link_to root_path, class: 'block' do
      %span.icon.icon_size_small.icon_brand_color_primary
        = render 'shared/icon', icon: '#icon_dabo-d-logo', klass: 'vertical_align_middle'
      %span.line_height_buffer_base.vertical_padding_small Nightingale
  .left_nav_btn
    %span.icon.icon_size_small.icon_brand_color_primary.float_left.line_height_buffer_base
      = render 'shared/icon', icon: '#icon_bookmark', klass: 'vertical_align_middle'
    %span.line_height_buffer_base.vertical_padding_small My Bookmarks
  .left_nav_btn
    = link_to '/metrics/payment-programs' do
      %span.icon.icon_size_small.icon_brand_color_primary.float_left.line_height_buffer_base
        = render 'shared/icon', icon: '#icon_graph_bar', klass: 'vertical_align_middle'
      %span.line_height_buffer_base.vertical_padding_small Payment Programs
  = yield :left_nav

= render 'shared/user_profile'
